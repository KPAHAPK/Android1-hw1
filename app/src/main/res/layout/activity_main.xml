<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ADEF8321"
        android:layout_margin="50dp">

        <TextView
            android:id="@+id/text_view"
            android:hint="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:padding="25dp"/>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/design_default_color_background"
            android:padding="16dp"
            android:hint="Enter text"/>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_compact"
            android:text="Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:background="#affbceed"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/check_box"
            android:text="@string/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:background="@color/design_default_color_error"
            android:textColorHint="@color/design_default_color_on_primary" />

        <ToggleButton
            android:id="@+id/toggle_button"
            android:textOff="lower case"
            android:textOn="UPPER CASE"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:background="@color/cardview_shadow_start_color"
            android:fontFamily="serif"/>

        <Button
            android:id="@+id/button"
            android:text="Show result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:backgroundTint="@color/black"
            android:fontFamily="casual"
            android:textSize="60px"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>